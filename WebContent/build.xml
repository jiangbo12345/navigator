<?xml version="1.0" encoding="UTF-8"?>
<project name="web" default="war" basedir="." >
    <import file="${basedir}/../build.imported.xml" />
    <property name="WEB-INF.dir" value="${basedir}/WEB-INF" />

    <target name="prepare-jar" depends="init">
        <copy todir="${WEB-INF.dir}/lib">
            <fileset dir="${lib.dir}" includes="*.jar"/>
        </copy>
    </target>

    <target name="war" depends="prepare-jar">
        <war destfile="${output.dir}/roomsweb.war" webxml="${WEB-INF.dir}/web.xml">
            <fileset dir="${basedir}">
                <exclude name="${web.lib.dir}/**/*"/>
                <exclude name="${output.dir}/**/*"/>
            </fileset>
        </war>
    </target>

</project>